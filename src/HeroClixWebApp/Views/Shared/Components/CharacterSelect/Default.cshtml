@model IEnumerable<HeroClixWebApp.Models.CharacterTable>

<script>
    
    $(document).ready(function () {
        //$('.secret').hide();
        var characterid = 1; 
        $("a").click(function () {
            characterid = $(this).children().contents().text();
            //alert(characterid);
            $('a').removeClass('mdl-navigation__link--current');
            $(this).addClass("mdl-navigation__link--current");
            $("main").load("/Home/Details/", { id: characterid });
        });
    });
</script>
<div class="">
    <div class="">
    @foreach (var item in Model)
    {
        
        @*<a asp-controller="Home" asp-action="Details" asp-route-id="@item.CharacterId" class="mdl-navigation__link characterButton">*@
        <a class="mdl-navigation__link characterButton">
            @Html.DisplayFor(modelItem => item.Name)
            <div class="secret" style="display: none;">@item.CharacterId</div>
        </a>

        @*</a>*@
        
        
    }
    </div>
</div>